<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment android:name="com.cybussolutions.kluchit.Fragments.CameraViewFragment"
        android:id="@+id/one"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/three" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_left"
        android:layout_margin="5dp"
        android:background="@drawable/log_one_a"
        android:layout_alignTop="@+id/b_right"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_right"
        android:layout_margin="5dp"
        android:background="@drawable/log_one_a"
        android:layout_above="@+id/three"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_left"
        android:layout_margin="5dp"
        android:background="@drawable/log_one_a"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_right"
        android:layout_margin="5dp"
        android:background="@drawable/log_one_a"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/middle"
        android:background="@drawable/log_one_a"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <fragment android:name="com.cybussolutions.kluchit.Fragments.UploadFragment"
        android:id="@+id/two"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_above="@+id/three"
        android:layout_alignParentStart="true" />


    <fragment android:name="com.cybussolutions.kluchit.Fragments.CameraFragment"
        android:id="@+id/three"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>