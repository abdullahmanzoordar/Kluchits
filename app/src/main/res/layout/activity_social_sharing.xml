<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment android:name="com.cybussolutions.kluchit.Fragments.CameraViewFragment"
        android:id="@+id/one"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/three" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_left"
        android:background="@drawable/log_one_a"
        android:layout_alignTop="@+id/b_right"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_right"
        android:background="@drawable/log_one_a"
        android:layout_above="@+id/three"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_left"
        android:background="@drawable/log_one_a"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_right"
        android:background="@drawable/log_one_a"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/middle"
        android:background="@drawable/log_one_a"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <fragment android:name="com.cybussolutions.kluchit.Fragments.UploadFragment"
        android:id="@+id/two"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_above="@+id/three"
        android:layout_alignParentStart="true" />

    <fragment android:name="com.cybussolutions.kluchit.Fragments.CameraFragment"
        android:id="@+id/three"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="flash"
        android:id="@+id/down"
        android:background="@drawable/down"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="flash"
        android:id="@+id/left"
        android:background="@drawable/left"
        android:layout_alignTop="@+id/right"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <fragment android:name="com.cybussolutions.kluchit.Fragments.Logo_chooser"
        android:id="@+id/logo_window"
        android:layout_weight="1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorAccent"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="32dp"
        android:layout_centerVertical="true"/>


    <fragment android:name="com.cybussolutions.kluchit.Fragments.Filters"
        android:id="@+id/filters"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="flash"
        android:id="@+id/right"
        android:background="@drawable/right"
        android:layout_toLeftOf="@+id/logo_window"
        android:layout_toStartOf="@+id/logo_window"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="flash"
        android:id="@+id/up"
        android:background="@drawable/up"
        android:layout_below="@+id/filters"
        android:layout_alignLeft="@+id/down"
        android:layout_alignStart="@+id/down"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>